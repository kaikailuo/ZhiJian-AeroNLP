{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "backend:deps (uv sync)",
      "type": "shell",
      "command": "uv sync",
      "options": {
        "cwd": "${workspaceFolder}/apps/backend"
      },
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "problemMatcher": []
    },
    {
      "label": "frontend:deps (npm install)",
      "type": "shell",
      "command": "npm install",
      "options": {
        "cwd": "${workspaceFolder}/apps/frontend"
      },
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "problemMatcher": []
    },

    {
      "label": "backend:dev",
      "type": "shell",
      "command": "uv run uvicorn app.main:app --reload --port 8000",
      "options": {
        "cwd": "${workspaceFolder}/apps/backend"
      },
      "problemMatcher": [],
      "isBackground": true,
      "presentation": {
        "panel": "dedicated",
        "group": "backend",
        "clear": false
      }
    },
    {
      "label": "frontend:dev",
      "type": "shell",
      "command": "npm run dev",
      "options": {
        "cwd": "${workspaceFolder}/apps/frontend"
      },
      "problemMatcher": [],
      "isBackground": true,
      "presentation": {
        "panel": "dedicated",
        "group": "frontend",
        "clear": false
      }
    },

    {
      "label": "deps:all",
      "dependsOn": [
        "backend:deps (uv sync)",
        "frontend:deps (npm install)"
      ],
      "dependsOrder": "sequence"
    },
    {
      "label": "dev:all",
      "dependsOn": [
        "backend:dev",
        "frontend:dev"
      ],
      "dependsOrder": "parallel"
    },

    {
      "label": "dev:all:with-deps",
      "dependsOn": [
        "deps:all",
        "dev:all"
      ],
      "dependsOrder": "sequence"
    }
  ]
}
